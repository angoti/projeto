{
  "java.configuration.updateBuildConfiguration": "automatic",
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true,
    "_bundle": true,
    "node_modules": false,
    "ios": true,
    "_*": true,
    "*.lock": true,
    "Gemfile": true,
    ".watchmanconfig": true,
    ".buckconfig": true,
    ".flowconfig": true,
    ".gitignore": true
  },
  "hide-files.files": [
    "Gemfile",
    ".watchmanconfig",
    ".buckconfig",
    ".flowconfig",
    ".gitignore"
  ],
  "[gradle]": {
    "editor.defaultFormatter": "richardwillis.vscode-spotless-gradle",
    "spotlessGradle.diagnostics.enable": true,
    "spotlessGradle.format.enable": true
  },
  "spotlessGradle.diagnostics.enable": true,
  "spotlessGradle.format.enable": true
}
